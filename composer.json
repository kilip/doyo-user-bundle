{
    "name": "doyo/user-bundle",
    "description": "API Platform User Bundle",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthonius Munthi",
            "email": "me@itstoni.com"
        }
    ],
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "generate-jwt-keys": "./console doyo-user:generate:jwt-keys",
        "prepare-test": [
            "./console doctrine:database:create --ansi -n --env=test",
            "./console doctrine:schema:update --ansi --force --env=test"
        ],
        "test": [
            "@prepare-test",
            "./etc/travis/test.sh"
        ],
        "coverage": [
            "@prepare-test",
            "COVERAGE=yes ./etc/travis/test.sh"
        ],
        "serve": "COMPOSER_PROCESS_TIMEOUT=0 php -S localhost:8000 -t fixtures/public"
    },
    "autoload": {
        "psr-4": {
            "Doyo\\UserBundle\\": "src/",
            "App\\": "fixtures/src"
        }

    },
    "autoload-dev": {
        "psr-4": {
            "Doyo\\UserBundle\\Tests\\": "tests/",
            "Doyo\\UserBundle\\Behat\\": "features/bootstrap/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "bin-dir": "fixtures/bin",
        "config-dir": "fixtures/config",
        "src-dir": "fixtures/src",
        "var-dir": "fixtures/var",
        "public-dir": "fixtures/public"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "api-platform/api-pack": "^1.2",
        "phpspec/phpspec": "^4.2",
        "symfony/flex": "^1.2",
        "symfony/translation": "^4.2",
        "symfony/webpack-encore-bundle": "^1.5"
    },
    "require-dev": {
        "behat/mink-browserkit-driver": "^1.3",
        "behat/symfony2-extension": "^2.1",
        "behatch/contexts": "^3.2",
        "leanphp/phpspec-code-coverage": "dev-master",
        "lexik/jwt-authentication-bundle": "^2.6",
        "matthiasnoback/symfony-dependency-injection-test": "@dev",
        "phpunit/phpcov": "^5.0",
        "phpunit/phpunit": "^7.5.2",
        "symfony/dotenv": "^4.2",
        "symfony/phpunit-bridge": "^4.2",
        "symfony/process": "^4.2",
        "symfony/profiler-pack": "^1.0",
        "symfony/swiftmailer-bundle": "^3.2",
        "symfony/twig-bundle": "^4.2",
        "symfony/yaml": "^4.2"
    }
}

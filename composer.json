{
    "name": "doyo/user-bundle",
    "description": "API Platform User Bundle",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthonius Munthi",
            "email": "me@itstoni.com"
        }
    ],
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "test": [
            "./console doctrine:database:create -n --env=test",
            "./console doctrine:schema:update --force --env=test",
            "./vendor/bin/phpunit",
            "./vendor/bin/behat -f progress"
        ],
        "coverage": [
            "./console doctrine:database:create -n --env=test",
            "./console doctrine:schema:update --force --env=test",
            "./vendor/bin/phpunit --coverage-php=build/cov/coverage-phpunit.cov",
            "./vendor/bin/behat -f progress -p coverage",
            "./vendor/bin/phpcov merge --clover build/logs/clover.xml build/cov",
            "./vendor/bin/phpcov merge --html build/html build/cov"
        ],
        "serve": "COMPOSER_PROCESS_TIMEOUT=0 php -S localhost:8000 -t tests/Resources/app/public"
    },
    "autoload": {
        "psr-4": {
            "Doyo\\UserBundle\\": "src/",
            "App\\": "tests/Resources/app/src"
        }

    },
    "autoload-dev": {
        "psr-4": {
            "Doyo\\UserBundle\\Tests\\": "tests/",
            "Doyo\\UserBundle\\Behat\\": "features/bootstrap/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "bin-dir": "tests/Resources/app/bin",
        "config-dir": "tests/Resources/app/config",
        "src-dir": "tests/Resources/app/src",
        "var-dir": "tests/Resources/app/var",
        "public-dir": "tests/Resources/app/public"
    },
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "api-platform/api-pack": "^1.2",
        "symfony/flex": "^1.2"
    },
    "require-dev": {
        "behat/mink-browserkit-driver": "^1.3",
        "behat/symfony2-extension": "^2.1",
        "behatch/contexts": "^3.2",
        "lexik/jwt-authentication-bundle": "^2.6",
        "matthiasnoback/symfony-dependency-injection-test": "@dev",
        "phpunit/phpcov": "^5.0",
        "phpunit/phpunit": "^7.5.2",
        "symfony/dotenv": "^4.2",
        "symfony/phpunit-bridge": "^4.2",
        "symfony/process": "^4.2",
        "symfony/profiler-pack": "^1.0",
        "symfony/translation": "^4.2",
        "symfony/yaml": "^4.2"
    }
}
